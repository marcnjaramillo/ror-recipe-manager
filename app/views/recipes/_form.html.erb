<%= form_for(recipe) do |f| %>
  <%= render 'shared/errors', object: f.object %>

  <div class="field">
    <%= f.label :name, "Recipe Name" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <h3>Time</h3>
    <span><%= f.label :prep_time, "Prep Time" %></span>
    <span><%= f.text_field :prep_time%> minutes</span>
    <span><%= f.label :cook_time, "Cook Time" %></span>
    <span><%= f.text_field :cook_time %> minutes</span>
  </div>

<h3>Ingredients</h3>
    <div class='form-group'>
      <button id="new_ingredient_button" type="button" data-url="/recipes/ingredients/new">Add New Ingredient</button>
    </div>
  <h3>Directions</h3>
  <%= f.fields_for :directions, @recipe.directions.build do |direction| %>
    <div class="direction">
      <%= direction.text_area :text, size: "60x10" %>
    </div>
  <% end %>
  <%= f.hidden_field(:user_id, value: current_user.id) %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
