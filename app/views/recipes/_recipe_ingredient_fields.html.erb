<div class="form-inline">
  <div class=" form-group nested-fields">
	 <%= f.label :quantity, "Quantity:" %>
		<%= f.text_field(:quantity, class: "form-control", :placeholder => "Ex: 1 cup") %>

		<%= f.fields_for(:ingredient) do |ri_ingredient| %>
		<%= ri_ingredient.label :name, "Name:" %>
		<%= ri_ingredient.text_field(:name, class: "form-control", :placeholder => "diced chicken") %>
	  <% end %>
		<%= link_to_remove_association "Remove", f, class: "btn btn-danger" %>
	</div>
</div>
