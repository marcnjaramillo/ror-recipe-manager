<div class="row">
  <div class="col">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <h2>Sign In</h2>
      <%= f.label :username %><br>
      <div class="input-group mb-3 w-25">
        <%= f.text_field :username, :autofocus => true, class: "form-control border-300 bg-light" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email %><br>
      <div class="input-group mb-3 w-25">
        <%= f.text_field :email, :autofocus => true, class: "form-control border-300 bg-light" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password %><br>
      <div class="input-group mb-3 w-25">
        <%= f.password_field :password, autocomplete: "off", class: "form-control border-300 bg-light" %>
      </div>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.label :remember_me %>
      <%= f.check_box :remember_me, class: "form-control w-25" %>
    </div>
    <% end -%>
    <div class="actions">
      <%= f.submit "Sign In", class:"btn btn-secondary" %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
