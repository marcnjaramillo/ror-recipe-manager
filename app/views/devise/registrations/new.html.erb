<div class="row">
  <div class="col">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2>Sign Up</h2>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :username %> <br />
      <div class="input-group mb-3 w-25">
        <%= f.text_field :username, :autofocus => true, class: "form-control border-300 bg-light" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <div class="input-group mb-3 w-25">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-300 bg-light" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <div class="input-group mb-3 w-25">
        <%= f.password_field :password, autocomplete: "off", class: "form-control border-300 bg-light" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <div class="input-group mb-3 w-25">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control border-300 bg-light" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up", class: "btn btn-secondary" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
