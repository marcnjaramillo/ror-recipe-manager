<h1>Sign in</h1>

<p>Don't have an account? <%= link_to("Sign Up Here!", signup_path) %></p>

<div>
  <%= form_for(:session, url: signin_path, method: :post) do |f| %>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.submit "Sign in", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<%= link_to("Sign in with Facebook", "/auth/facebook", class: "btn btn-default") %>
